{
  "name": "static-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "http-server -c-1 -o -e html .",
    "prepublishOnly": "npm run build:release && npm version patch",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && rollup -c --bundleConfigAsCjs && npm run build-widget && tsc -p tsconfig.release.json",
    "build-widget": "rollup --config rollup-widget.config.js --bundleConfigAsCjs",
    "build-assets": "rollup --watch -c --bundleConfigAsCjs --context window",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-generate": "ts-node src/index.ts -o dist test/test.json"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "rollup": "^4.10.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.70.0",
    "terser": "^5.27.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
